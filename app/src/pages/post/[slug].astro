---
import { useSanityClient } from "astro-sanity";
import PortableText from "../../components/PortableText.astro";
import { Author, Post, getAuthor, getPost } from "../../utils/sanity";
import { urlForImage } from "../../sanity/urlForImage";
import { formatDate } from "../../utils";
import BlogPost from "../../layouts/BlogPost.astro";

export async function getStaticPaths() {
  const posts = await useSanityClient().fetch(`*[_type == "post"]`);

  return posts.map((post: Post) => {
    console.log(post.author);
    return {
      params: {
        slug: post.slug?.current || "",
      },
      props: { ...post },
    };
  });
}

const { title, author, _createdAt, readTime, mainImage, body, keywords, excerpt } = Astro.props;

const authorDetails: Author = await getAuthor(author._ref).then(
  (author: Author) => {
    return author;
  }
);
---

<BlogPost title={title} mainImage={mainImage} keywords={keywords} excerpt={excerpt}>

  <div class="mt-28 mb-16 space-y-2">
    <h1 class="text-5xl font-bold mb-2">{title}</h1>

    <h3 class="text-xl font-semibold text-slate-400 dark:text-slate-500">
      by <a
        target="_blank"
        class="hover:text-teal transition cursor-pointer"
        href={authorDetails.url}>{authorDetails.name}</a
      >
    </h3>

    <h5 class="text-xs text-slate-400 dark:text-slate-500">
      {`${formatDate(_createdAt)} Â· ${readTime} minutes`}
    </h5>
  </div>

  <div class="flex justify-center">
    <img class="md:rounded-2xl md:max-w-[75vw]" src={urlForImage(mainImage).url()} />
  </div>

  <div class="mb-28">
    <PortableText portableText={body} />
  </div>
</BlogPost>
